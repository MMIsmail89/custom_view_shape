<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/part3_tv_topic3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi @ Shape Custom View - Part 3"

        android:textSize="22sp"

        android:layout_marginTop="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.customviewshape.custom_view.Shape_custom_view3
        android:id="@+id/part3_cv_shape3"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        android:layout_margin="20dp"
        android:background="#80CDDC39"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/part3_tv_topic3"

        app:square_size="@dimen/squareSize"
        app:square_color="@color/SquareColor"       />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/part3_btn_swapColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:text="Switch Color"
        android:textAllCaps="false"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/part3_cv_shape3"/>

    <Button
        android:id="@+id/part3_btn_NextPart4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Next - Part 4"
        android:textAllCaps="false"

        android:visibility="invisible"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/part3_btn_swapColor"/>

    <Button
        android:id="@+id/part3_btn_ReturnPart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Return - Part 2"
        android:textAllCaps="false"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/part3_btn_NextPart4"/>


</androidx.constraintlayout.widget.ConstraintLayout>